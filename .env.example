# ===========================================
# EBMC GROUP - Environment Variables
# ===========================================

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:8889

# Authentication
JWT_SECRET=your-jwt-secret-key-change-in-production

# Payload CMS
PAYLOAD_SECRET=your-super-secret-key-change-in-production

# MongoDB
MONGODB_URI=mongodb://localhost:27017/ebmc

# SMTP (Infomaniak)
SMTP_HOST=mail.infomaniak.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@ebmc-group.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@ebmc-group.com

# Contact
CONTACT_EMAIL=contact@ebmcgroup.eu

# S3 Storage (Optional)
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=
# S3_ENDPOINT=

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_GTM_ID=

# ===== Boondmanager Integration =====
# Production API
BOOND_PROD_URL=https://ui.boondmanager.com/api
BOOND_PROD_CLIENT_ID=your-client-id
BOOND_PROD_USERNAME=your-username
BOOND_PROD_TOKEN=your-token

# Sandbox API
BOOND_SANDBOX_URL=https://sandbox.boondmanager.com/api
BOOND_SANDBOX_CLIENT_ID=your-sandbox-client-id
BOOND_SANDBOX_USERNAME=your-sandbox-username
BOOND_SANDBOX_TOKEN=your-sandbox-token

# Use sandbox for development
BOOND_USE_SANDBOX=true

# ===== Make.com Webhooks =====
MAKE_WEBHOOK_NEW_CANDIDATE=
MAKE_WEBHOOK_NEW_OFFER=
MAKE_WEBHOOK_APPLICATION=
MAKE_WEBHOOK_CONTACT=
MAKE_WEBHOOK_SYNC=

# ===== Rate Limiting =====
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
